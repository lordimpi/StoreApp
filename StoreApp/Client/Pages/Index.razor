@page "/"
@inject HttpClient ClientHttp
@using StoreApp.Shared

<div class="container-fluid">
    <hr />
    <h1>StoreApp!</h1>

    Welcome to my Store App
    <hr />

    <div class="card-columns">
        @foreach (var item in Products)
        {
            <div class="col mb-4">
                <div class="card" style="width:400px; cursor:pointer">
                    <img class="card-img-top" src="/@item.RutaImagen" alt="@item.Nombre" style="width:90%">
                    <div class="card-body">
                        <h4 class="card-title">$ @item.Precio.PrecioVenta</h4>
                        <p class="card-text">@item.Nombre</p>
                        <a href="#" class="btn btn-success">Add to car</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@code
{
    List<Product> Products = new List<Product>();

    protected async override Task OnInitializedAsync()
    {
        Products = await ClientHttp.GetFromJsonAsync<List<Product>>("api/ListProducts");
    }
}