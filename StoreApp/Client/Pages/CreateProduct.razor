@page "/ProductCard/{Product}"

<RadzenCard Style="margin-bottom: 30px">
    <style>
        form .row {
            margin-bottom: 16px;
        }
    </style>
    <RadzenTemplateForm Data="@Product">
        @if (Product.Id == 0)
        {
            <h1>Create Product</h1>
            <div class="row">
                <div class="col-md-6">
                    <RadzenFieldset Text="Product Info">
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Nombre" />
                            </div>
                            <div class="col-md-8">
                                <RadzenTextBox Style="width:100%" Name="ProductName" @bind-Value="Product.Nombre" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Precio $" />
                            </div>
                            <div class="col-md-8">
                                <RadzenNumeric TValue="double" Min="1" Max="999999999" ShowUpDown="false" style="width: 100%;"
                                               Name="ProductPrice" @bind-Value="Product.Precio.PrecioVenta" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Fecha de creación" />
                            </div>
                            <div class="col-md-8">
                                <RadzenDatePicker style="width: 100%;" Name="ProductDateH" @bind-Value="Product.FechaAlta" DateFormat="d" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Fecha de baja" />
                            </div>
                            <div class="col-md-8">
                                <RadzenDatePicker style="width: 100%;" Name="ProductDateB" @bind-Value="Product.FechaBaja" DateFormat="d" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Descripción" />
                            </div>
                            <div class="col-md-8">
                                <RadzenTextArea MaxLength="1000" Placeholder="Escribir aqui..." @bind-value="Product.Descripcion" />
                            </div>
                        </div>
                    </RadzenFieldset>
                </div>
            </div>
        }
        else
        {
            <h1>Edit Product</h1>
            <div class="row">
                <div class="col-md-6">
                    <RadzenFieldset Text="Product Info">
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Nombre" />
                            </div>
                            <div class="col-md-8">
                                <RadzenTextBox Style="width:100%" Name="ProductName" @bind-Value="Product.Nombre" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Precio $" />
                            </div>
                            <div class="col-md-8">
                                <RadzenNumeric TValue="double" Min="1" Max="999999999" ShowUpDown="false" style="width: 100%;"
                                               Name="ProductPrice" @bind-Value="Product.Precio.PrecioVenta" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Fecha de creación" />
                            </div>
                            <div class="col-md-8">
                                <RadzenDatePicker style="width: 100%;" Name="ProductDateH" @bind-Value="Product.FechaAlta" DateFormat="d" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Fecha de baja" />
                            </div>
                            <div class="col-md-8">
                                <RadzenDatePicker style="width: 100%;" Name="ProductDateB" @bind-Value="Product.FechaBaja" DateFormat="d" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 align-items-center d-flex">
                                <RadzenLabel Text="Descripción" />
                            </div>
                            <div class="col-md-8">
                                <RadzenTextArea MaxLength="1000" Placeholder="Escribir aqui..." @bind-value="Product.Descripcion" />
                            </div>
                        </div>
                    </RadzenFieldset>
                </div>
            </div>
        }
    </RadzenTemplateForm>

</RadzenCard>


@code
{
    [Parameter]
    public Product Product { get; set; }

}
